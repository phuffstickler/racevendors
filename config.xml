    <gap:splash src="ios_splash_retina.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="ios_splash_retina.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="ios_splash_retina.png" gap:platform="android" gap:density="xhdpi" />
    
    <gap:splash src="ios_splash.png" gap:platform="winphone" />
    
